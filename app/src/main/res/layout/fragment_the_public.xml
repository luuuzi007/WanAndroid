<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tablayout_public"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/theme"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:tl_indicator_color="@color/indicator_color"
        app:tl_indicator_corner_radius="5dp"
        app:tl_indicator_margin_left="2dp"
        app:tl_indicator_margin_right="2dp"
        app:tl_indicator_style="BLOCK"
        app:tl_textSelectColor="@color/theme" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_public"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</androidx.appcompat.widget.LinearLayoutCompat>